#Build imagem
docker build -t schulzdaniel/nom_imagem .
#Rodar imagem
docker run -d -p 8889:8889 image
#Consultar processos
docker ps
#Remover processos
docker rm -f id
#Rodar em modo interativo
docker run -it
#Empurrar para repositório
docker push image
#Download imagem
docker pull image
#Subir os serviços
docker compose up
#Remover todos os containers
docker rm -vf $(docker ps -a -q)
#Realizar build no compose
docker-compose build node
#Verificar recursos
docker stats
#Inspecionar
docker inspect
#Interagir com o container
docker exec id
#Docker Swarm
docker swarm init --advertise-addr 192.168.1.110
#Docker stack
docker stack deploy --compose-file docker-compose.yml encaminhador

#---Git---
#Iniciar respositorio
git init
git push -f encaminhador master
git filter-branch --tree-filter "rm -rf --cached --ignore-unmatch docker/alarmes/classificador/text_classifier" HEAD
